<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:src="@drawable/dumy"
            app:civ_border_color="#DFF5FF"
            app:civ_border_width="8dp" />


        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Masum Mehedi"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/base_color" />


        <TextView
            android:id="@+id/userEmailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="example@gmail.com"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@color/base_color" />


        <TextView
            android:padding="4dp"
            android:id="@+id/userBioTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used as a placeholder before final copy is available."
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/base_color" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:includeFontPadding="false"
                android:id="@+id/profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/back_outline"
                android:fontFamily="@font/roboto_bold"
                android:text="Profile"
                android:textColor="@color/base_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:includeFontPadding="false"
                android:id="@+id/messageBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/back_fill"
                android:fontFamily="@font/roboto_bold"
                android:text="message"
                android:textColor="@color/blue_grey" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>